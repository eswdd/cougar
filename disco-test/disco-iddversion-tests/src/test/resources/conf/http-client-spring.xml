<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean class="uk.co.exemel.disco.util.configuration.PropertyConfigurer">
        <constructor-arg index="0" ref="disco.core.EncryptorRegistry"/>
	   <property name="defaultConfig" value="classpath:conf/http-client.properties"/>
	   <property name="configOverride" value="override.properties"/>
	   <property name="placeholderPrefix" value="$HTTP_CLIENT{"/>
	</bean>


    <bean id="baselineClient" class="com.betfair.baseline.v2.BaselineSyncClientImpl" parent="disco.client.AbstractSyncClient">
        <constructor-arg value="pants"/>
    </bean>

    <bean class="uk.co.exemel.disco.core.impl.ev.ClientServiceRegistration">
        <property name="resolver">
            <bean class="com.betfair.baseline.v2.BaselineClientExecutableResolver" init-method="init">
                <property name="defaultOperationTransport" ref="rescriptTransport"/>
            </bean>
        </property>
        <property name="serviceDefinition">
            <bean class="com.betfair.baseline.v2.BaselineServiceDefinition"/>
        </property>
        <property name="namespace" value="pants"/>
    </bean>
    
    <bean id="clientIdentityResolver" class="uk.co.exemel.disco.baseline.security.GeneralIdentityResolver"/>
    
    
    <bean id="rescriptTransport" parent="disco.client.AbstractRescriptTransport">
        <constructor-arg>
            <bean class="com.betfair.baseline.v2.rescript.BaselineRescriptServiceBindingDescriptor"/>
        </constructor-arg>
        <property name="remoteAddress" value="$HTTP_CLIENT{disco.client.rescript.remoteaddress}"/>
        <property name="exceptionFactory">
            <bean class="com.betfair.baseline.v2.exception.BaselineExceptionFactory"/>
        </property>
        <property name="identityTokenResolver">
            <bean class="uk.co.exemel.disco.baseline.security.BaselineClientIdentityTokenResolver"/>
        </property>
        <property name="identityResolver" ref="clientIdentityResolver"/>
        <!-- SSL ARGS -->
        <property name="transportSSLEnabled" value="$HTTP_CLIENT{disco.client.rescript.useSSL}"/>
        <property name="httpsKeystore" value="$HTTP_CLIENT{disco.client.rescript.httpsKeystore}"/>
        <property name="httpsKeyPassword" value="$HTTP_CLIENT{disco.client.rescript.httpsKeyPassword}"/>
        <property name="httpsTruststore" value="$HTTP_CLIENT{disco.client.rescript.httpsTruststore}"/>
        <property name="httpsTrustPassword" value="$HTTP_CLIENT{disco.client.rescript.httpsTrustPassword}"/>
    </bean> 


</beans>
