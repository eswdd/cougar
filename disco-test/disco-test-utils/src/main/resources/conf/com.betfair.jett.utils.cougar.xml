<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="discoHelpers" class="com.betfair.testing.utils.disco.helpers.DiscoHelpers">
		<property name="discoDAO" ref="discoDefaultDAO"/>
	</bean>

	<bean id="discoDefaultDAO" class="com.betfair.testing.utils.disco.daos.DiscoDefaultDAO"/>

	<bean id="restJSONCallMaker" class="com.betfair.testing.utils.disco.callmaker.RestJSONCallMaker">
		<property name="discoHelpers" ref="discoHelpers"/>
	</bean>

	<bean id="restXMLCallMaker" class="com.betfair.testing.utils.disco.callmaker.RestXMLCallMaker">
		<property name="discoHelpers" ref="discoHelpers"/>
	</bean>

	<bean id="restGenericCallMaker" class="com.betfair.testing.utils.disco.callmaker.RestGenericCallMaker">
		<property name="discoHelpers" ref="discoHelpers"/>
	</bean>

	<bean id="soapCallMaker" class="com.betfair.testing.utils.disco.callmaker.SoapCallMaker">
		<property name="discoHelpers" ref="discoHelpers"/>
	</bean>
	
	<util:map id="requestBuilderMap" map-class="java.util.HashMap" key-type="com.betfair.testing.utils.disco.enums.DiscoMessageProtocolRequestTypeEnum">
		<entry key="RESTJSON">
			<ref bean="restJSONCallMaker"/>
		</entry>
		<entry key="RESTXML">
			<ref bean="restXMLCallMaker"/>
		</entry>
		<entry key="SOAP">
			<ref bean="soapCallMaker"/>
		</entry>
		<entry key="REST">
			<ref bean="restGenericCallMaker"/>
		</entry>
	</util:map>

</beans>
